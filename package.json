{
    "name": "appbuilder-pwa",
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "concurrently --restart-tries -1 --restart-after 10 -t HH:mm:ss -p \"[{time} {name}]\" -n Converter,Svelte \"ts-node convert/index.ts --watch\" \"vite dev --host\"",
        "dev:noconvert": "vite dev --host",
        "build": "ts-node convert/index.ts && vite build",
        "build:examples": "ts-node convert/index.ts --examples && vite build",
        "package": "vite package",
        "preview": "vite preview --host",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check --plugin-search-dir=. . && eslint .",
        "eslint": "eslint .",
        "format": "prettier --write --plugin-search-dir=. .",
        "convert": "ts-node convert/index.ts",
        "convert:watch": "ts-node convert/index.ts --watch",
        "convert:examples": "ts-node convert/index.ts --examples",
        "sandbox": "ts-node data-sandbox/index.ts",
        "clean": "rimraf .svelte-kit build src/lib/data/config.js src/lib/data/catalog.js src/lib/data/firebase-config.js src/lib/data/contents.js static/about.partial.html static/badges static/collections static/images static/fonts static/styles static/illustrations static/watermarks static/audio static/timings static/backgrounds static/icons static/borders static/manifest.json && echo ðŸ”” Reminder: The project cannot be built until the conversion scripts are run again.",
        "clean:data": "rimraf --glob data/*",
        "clean:all": "npm run clean && npm run clean:data",
        "test": "vitest",
        "test:ui": "vitest --ui"
    },
    "devDependencies": {
        "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
        "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
        "@sveltejs/adapter-static": "^2",
        "@sveltejs/kit": "^1",
        "@tailwindcss/typography": "^0.5.2",
        "@types/jsdom": "^21",
        "@types/node": "^20",
        "@typescript-eslint/eslint-plugin": "^6",
        "@typescript-eslint/parser": "^6",
        "@vitest/ui": "^1.2.1",
        "autoprefixer": "^10.4.7",
        "concurrently": "^8",
        "daisyui": "^4",
        "eslint": "^8.44.0",
        "eslint-config-prettier": "^9",
        "eslint-plugin-prettier": "^5",
        "eslint-plugin-svelte": "^2",
        "fflate": "^0.8",
        "idb": "^7.1.1",
        "jsdom": "^22",
        "postcss": "^8.4.14",
        "prettier": "^3",
        "prettier-plugin-svelte": "^3",
        "proskomma-core": "0.10.4",
        "proskomma-json-tools": "^0.8.4",
        "proskomma-tools": "^0.0.5",
        "rimraf": "^5",
        "svelte": "^4",
        "svelte-check": "^3",
        "svelte-eslint-parser": "^0.33",
        "svelte-french-toast": "^1.0.3",
        "svelte-gestures": "^1.4.1",
        "svelte-preprocess": "^5",
        "tailwindcss": "^3.3",
        "ts-node": "^10.8.1",
        "typescript": "^5",
        "vite": "^4",
        "vitest": "^1.0.0"
    },
    "volta": {
        "node": "20.9.0"
    }
}
